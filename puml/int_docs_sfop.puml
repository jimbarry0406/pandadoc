!include https://raw.githubusercontent.com/jimbarry0406/pandadoc/main/puml/pandadoc_defaults.puml

autonumber

  Box Salesforce
    actor User order 1
    database Opportunity order 2
    database OpportunityProducts order 3
    participant PanadaDocAddOn order 4
  end Box

  Box PandaDoc #LightGray
    participant Document order 6
    participant Integrations order 5
  end Box

  User -> Opportunity: Initiates

  autonumber stop
    Opportunity <-- Opportunity: add Opportunity Data
    Opportunity --> Opportunity: add OpportunityProducts Data
  autonumber resume

  PanadaDocAddOn -> Document: Create
  
  group#LightGray #FFC636 monitor
    Integrations o<[#red]- Document : Status Changes (Sent or Completed)
    OpportunityProducts <[#red]-o Integrations : Update OpportunityProducts
  end

@enduml